<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d300"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/changepass_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d42"
        android:background="@color/main_color"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/d10"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/fontSizeMediumLarge"
        android:visibility="gone" />

    <TextView
        android:id="@+id/forgetpass_dialogdec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d60"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/d16"
        android:text="@string/changepassword_msg"
        android:textColor="@color/light_black"
        android:textSize="@dimen/fontSizeMedium"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d18">

        <ProgressBar
            android:id="@+id/changepass_progbar"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginLeft="@dimen/d8"
            android:indeterminateTint="@color/colorAccent"
            android:indeterminateTintMode="src_in"
            android:visibility="gone" />

        <EditText
            android:id="@+id/changepass_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d46"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:background="#B0B0B0"
            android:gravity="left|center_vertical"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d16"
            android:paddingRight="@dimen/d16"
            android:paddingTop="@dimen/d10"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/changepass_dialogerror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d8"
        android:gravity="left|center_vertical"
        android:padding="@dimen/d10"
        android:textColor="#FF0000"
        android:textSize="@dimen/fontSizeMedium"
        android:textStyle="bold"
        android:visibility="gone"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/d12"
        android:background="@color/main_color" />

    <LinearLayout
        android:id="@+id/changepass_btnlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/d12"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/changepass_nobtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/d4"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/light_black"
            android:textSize="@dimen/fontSizeMedium"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/main_color" />

        <Button
            android:id="@+id/changepass_yesbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Yes"
            android:textColor="@color/light_black"
            android:textSize="@dimen/fontSizeMedium"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>