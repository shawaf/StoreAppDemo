<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_rounded_corner"
    android:orientation="vertical"


    >


        <com.etsy.android.grid.util.DynamicHeightImageView
            android:id="@+id/prodlist_item_prod_iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/street" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <com.oncoti.Utilites.RoundedImageView
            android:id="@+id/prodlist_item_prod_owner_iv"
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d32"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/inter_icon2" />

        <TextView
            android:id="@+id/prodlist_item_prod_ownername_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="ShuShi Dubai"
            android:textColor="#505050"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/prodlist_item_prod_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="3 days ago"
            android:textColor="@color/dark_grey"
            android:textSize="13sp"

            />

        <TextView
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/main_color" />

        <TextView
            android:id="@+id/prodlist_item_prod_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Clothes"
            android:textColor="@color/main_color"
            android:textSize="@dimen/fontSizeMedium" />

        <TextView
            android:id="@+id/prodlist_item_prod_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="3"
            android:text="Black and White Abaya with red Ribbons "
            android:textColor="#808080"
            android:textSize="13sp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="@color/main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="13dp">

            <TextView
                android:id="@+id/prodlist_item_prod_price_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="DHS"
                android:textColor="@color/dark_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/prodlist_item_prod_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="1500"

                android:textColor="#505050"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/white_rounded_corner"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <LinearLayout
            android:id="@+id/prodlist_item_prod_like_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="7dp">

            <ImageView
                android:id="@+id/prodlist_item_prod_like_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/like_inactive"

                />

            <TextView
                android:id="@+id/prodlist_item_prod_like_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="12 Wow"
                android:textSize="10sp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prodlist_item_prod_comments_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/prodlist_item_prod_comment_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/comment"

                />

            <TextView
                android:id="@+id/prodlist_item_prod_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="33 comment"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>