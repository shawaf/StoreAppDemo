<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|top">

            <com.oncoti.Utilites.RoundedImageView
                android:id="@+id/ivisited_userimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/inter_icon2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|top"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ivisited_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:text="Shushi dubai"
                    android:textColor="@color/light_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:text="@string/visited"
                    android:textColor="@color/light_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ivisit_placename"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Dubai Mall"
                    android:textColor="@color/main_color"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/ivisited_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="2dp"
                android:text="3 days ago"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ivisit_placelocation_lay"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/two_sides_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ivisit_placelocation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Abu Dhabi-United Arab Emirates"
                    android:textColor="@color/light_black"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/map" />
            </LinearLayout>

            <TextView
                android:id="@+id/ivisit_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="6dp"
                android:maxLines="3"
                android:text="@string/test_post" />

            <HorizontalScrollView
                android:id="@+id/horizontal_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ivisit_images_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone"
                    >


                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/ivisit_likesimage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like_inactive_option" />

                <TextView
                    android:id="@+id/ivisit_likescount"
                    android:layout_width="@dimen/d40"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="151"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ivisit_commentimage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment_option" />

                <TextView
                    android:id="@+id/ivisit_commentscount"
                    android:layout_width="@dimen/d60"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="12"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="5dp"
        />
</LinearLayout>