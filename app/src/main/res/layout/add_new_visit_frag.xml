<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/newvisit_photo1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/add_photo_bg"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/newvisit_photo2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/add_photo_bg"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/newvisit_photo3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/add_photo_bg"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/newvisit_shopname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/d10"
                android:singleLine="false"
                android:hint="@string/whatshop"
                android:inputType="text"
                android:paddingLeft="@dimen/d8"
                android:paddingRight="@dimen/d8"
                android:textColor="#606060"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/fontSizeMediumLarge" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/d10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/d8"
                    android:paddingRight="@dimen/d8">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/map_maker" />

                    <TextView
                        android:id="@+id/newvisit_locationt_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="@string/identfyloc"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/fontSizeMediumLarge" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#606060" />
            </LinearLayout>
            <EditText
                android:id="@+id/newvisit_whatdidthere"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rounded_rectangle"
                android:maxLines="5"
                android:singleLine="false"
                android:hint="@string/whatdid"
                android:inputType="text"
                android:paddingLeft="@dimen/d8"
                android:paddingRight="@dimen/d8"
                android:textColor="#606060"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/fontSizeMediumLarge" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>